
imgs-path = "../img/"
font-path = "../font/"

*
  margin 0
  padding 0

@font-face
 font-family: gothaprobol;
 src: url(font-path GOTHAPROBOL.OTF);

@font-face
 font-family: gothaprolig;
 src: url(font-path GOTHAPROLIG.OTF);

@font-face
 font-family: gothapromed;
 src: url(font-path GOTHAPROMED.OTF);

@font-face
 font-family: gothaproreg;
 src: url(font-path GOTHAPROREG.OTF);


body, html, .main
  height 100%
  width 100%

body
  overflow hidden
  background-color black

.main
  display flex
  flex-wrap wrap

.gl-main
  background url(imgs-path participants.jpg)
  animation rise 0.5s infinite
  animation-iteration-count 1

.gl-main
  background-size 100%

.banner
  width 100%
  height 200px

.left-block
  flex-basis 450px
  margin-top 50px
  flex-grow 0
  margin-left 50px
  display flex
  flex-direction column
  font-family gothaprobol

.right-block
  background-color rgba(0, 0, 0, 0.61)
  flex-basis 400px
  margin-top 50px
  flex-grow 2
  margin-right 50px
  margin-left 50px
  font-family gothaprolig

.mini-banner
  width 100%

.menu
  display flex
  flex-direction column
  font-size 30px
  flex-grow 2
  overflow hidden

.menu-button
  width 100%
  margin auto
  background-color white
  padding-left 30px
  text-transform uppercase
  padding-top 10px
  padding-bottom 10px

.menu-button:hover
  cursor pointer

.menu-head
  background-color rgba(0,0,0,.61)
  flex-grow 1

.last-skirmish-info
  height 50px
  font-family gothaprolig
  font-size 20px
  color white

.last-skirmish-info span
  display block
  margin-left 20px
  margin-right 20px
  margin-top 5px

.foot
  width 100%
  height 50px

.title
  height 50px
  width 100%
  background-color white
  font-size 30px
  text-transform uppercase
  display flex

.title span
  margin auto

.author-list
  height: 85%;
  overflow: auto;

.author-item
  margin: 20px;
  color: white;
  display: flex;
  background-color: #1f1f1f;

.author-item a
  color #2da953
  margin-right 10px

.author-avatar
  margin: 5px;

.author-info
  display: inline-block;
  width: 100%;
  margin: 5px;

.author-info-first
  width: 100%;

.author-achives
  float: right;

.author-info-second
  margin-top: 10px;

@keyframes rise
  from
    opacity 0

  to
    opacity 1
